<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/getAllProductsButton"
        android:layout_width="260dp"
        android:layout_height="61dp"
        android:layout_marginBottom="84dp"
        android:text="View all products"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/searchProductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="40dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/IDProductForSearchInputText"
        android:layout_width="208dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:hint="Search product with ID"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/searchProductButton"
        app:layout_constraintHorizontal_bias="0.787"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/priceProductInputText"
        android:layout_width="135dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:hint="Price"
        app:layout_constraintEnd_toStartOf="@+id/addProductButton"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameProductInputText" />

    <Button
        android:id="@+id/addProductButton"
        android:layout_width="133dp"
        android:layout_height="54dp"
        android:layout_marginTop="316dp"
        android:text="Add "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nameProductInputText"
        android:layout_width="136dp"
        android:layout_height="55dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="44dp"
        android:hint="Product name"
        app:layout_constraintEnd_toStartOf="@+id/addProductButton"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/IDProductInputText"
        android:layout_width="145dp"
        android:layout_height="57dp"
        android:layout_marginBottom="24dp"
        android:hint="Product id"
        app:layout_constraintBottom_toTopOf="@+id/addProductButton"
        app:layout_constraintEnd_toEndOf="@+id/addProductButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/nameProductInputText" />

</androidx.constraintlayout.widget.ConstraintLayout>